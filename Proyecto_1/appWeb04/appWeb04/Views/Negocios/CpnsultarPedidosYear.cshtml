@model IEnumerable<appWeb04.Models.Pedido>

@{
    ViewBag.Title = "CpnsultarPedidosYear";
}

<h2>Consultar Pedidos por Año</h2>
<div>
    @using(Html.BeginForm())
    {
        <em> Ingrese el Año del Pedido</em>
        @Html.TextBox("y", 0, new {type="number", min=1993, max=DateTime.Today.Year})
        <button> Consulta</button>
    }
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idPedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ciudad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idPedido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ciudad)
        </td>
      
    </tr>
}

</table>
